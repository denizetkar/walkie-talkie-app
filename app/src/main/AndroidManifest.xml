<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Hardware Feature Check -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <!-- =================================================================== -->
    <!-- LEGACY PERMISSIONS (Android 11 / API 30 and below)                  -->
    <!-- We cap these at API 30 so they are IGNORED on Android 12+.          -->
    <!-- =================================================================== -->
    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_ADMIN"
        android:maxSdkVersion="30" />

    <!-- Location is required for BLE scanning ONLY on older Android versions. -->
    <!-- On Android 12+, we use the "neverForLocation" flag on BLUETOOTH_SCAN instead. -->
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:maxSdkVersion="30" />
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:maxSdkVersion="30" />

    <!-- =================================================================== -->
    <!-- MODERN PERMISSIONS (Android 12 / API 31 and above)                  -->
    <!-- Older devices will simply ignore these tags.                        -->
    <!-- =================================================================== -->

    <!-- android:usesPermissionFlags="neverForLocation" asserts we aren't using BLE for GPS. -->
    <!-- This allows us to scan without asking for Location permission on Android 12+. -->
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="31" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_ADVERTISE"
        tools:targetApi="31" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_CONNECT"
        tools:targetApi="31" />

    <!-- =================================================================== -->
    <!-- CORE FEATURES (All Versions)                                        -->
    <!-- =================================================================== -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- CPU Management: Essential for Walkie-Talkie to work when screen is off -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Notifications: Required for Android 13+ (API 33) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Foreground Service Types (Android 14+) -->
    <uses-permission
        android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE"
        tools:targetApi="34" />
    <uses-permission
        android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE"
        tools:targetApi="34" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WalkieTalkieApp">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".WalkieTalkieService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone|connectedDevice" />
    </application>

</manifest>